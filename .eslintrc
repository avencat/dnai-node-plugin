{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended",
    "prettier/flowtype"
  ],
  "plugins": [
    "flowtype",
    "flowtype-errors"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "flowtype-errors/show-errors": "error",
    "prettier/prettier": ["error", { "singleQuote": true, "trailingComma": true }],
    "max-len": ["error", 120],
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }]
  }
}
